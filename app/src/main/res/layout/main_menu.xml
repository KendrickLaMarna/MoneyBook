<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/browser_actions_bg_grey"
    tools:context=".MainMenu"
    android:weightSum="3">






    <TextView
        android:id="@+id/textView_Bilancio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BILANCIO TOTALE: "
        android:layout_centerHorizontal="true">
    </TextView>
    <TextView
        android:id="@+id/bilancio_totale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/textView_Bilancio"
        android:text="">
    </TextView>

    <TextView
        android:id="@+id/entrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_Bilancio"
        android:layout_alignParentLeft="true"
        android:text="">
    </TextView>
    <TextView
        android:id="@+id/uscite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_Bilancio"
        android:layout_alignParentRight="true"
        android:text="">
    </TextView>

        <LinearLayout
            android:id= "@+id/form1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/entrate">

        <EditText
            android:id="@+id/date_transaction"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Data"
            android:textColor="@color/black"  />

        <EditText
            android:id="@+id/transaction"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Descrizione transazione"
            android:textColor="@color/black"  />
    </LinearLayout>


    <LinearLayout
        android:id= "@+id/form2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/form1">


        <EditText
            android:id="@+id/import_transaction"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Importo"
            android:textColor="@color/black"  />

        <Spinner
            android:id="@+id/transaction_type_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </LinearLayout>

        <Button
            android:id="@+id/addTransactionsBtn"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/form2"
            android:layout_alignParentRight="true"
            android:text="AGGIUNGI"/>


    <TableLayout
        android:id="@+id/tableResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addTransactionsBtn"
        android:layout_weight="2">


        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transazioni:"
            android:textSize = "20dp"
            android:textStyle="bold">
        </TextView>


        <TableRow android:background="#51B435" android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transazione" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Importo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo" />

        </TableRow>
        <TableRow android:background="#F0F7F7" android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Virat Kohli" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IND" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="895" />
        </TableRow>
    </TableLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/black"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_main" />


</RelativeLayout>