<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterWindow">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextSignUpMail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/editTextSurname"
        android:hint="Nome"
        android:padding="10dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextSignUpMail"
        app:layout_constraintStart_toEndOf="@id/editTextName"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Cognome"
        android:padding="10dp"
        android:textColor="@color/black" />



    <EditText
        android:id="@+id/editTextSignUpMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextSurname"
        app:layout_constraintBottom_toTopOf="@id/editTextSignUpPassword"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/confirmMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/editTextSignUpMail"
        app:layout_constraintBottom_toTopOf="@id/editTextSignUpPassword"
        android:hint="conferma E-mail"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTextSignUpPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/confirmMail"
        app:layout_constraintBottom_toTopOf="@id/confirmPassword"
        android:hint="Password"
        android:layout_marginTop="2dp"
        android:inputType="text|textCapSentences"
        android:padding="10dp"
        android:textColor="@color/black"  />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextSignUpPassword"
        app:layout_constraintBottom_toTopOf="@id/signupButton"
        android:hint="Conferma password"
        android:inputType="text|textCapSentences"
        android:padding="10dp"
        android:textColor="@color/black"  />



    <Button
        android:id="@+id/signupButton"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextSignUpPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="end"
        android:text="REGISTRATI"/>

</androidx.constraintlayout.widget.ConstraintLayout>